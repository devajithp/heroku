<section class="bg-light margintop">
  <div class="container-fluid ">
  
    
    <div class="row ">
      
     {{#each product}}
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 ">
           
            <div class="card ml-5 mt-5 text-center" style="width: 18rem;">
  <img class="card-img-top mt-2" style="height: 150px; width:150px;" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{this.Name}}</h5>
    <h6>Price: RS.{{this.Price}}</h6>
    <p class="card-text">{{this.Description}}</p>
    <a href="/addtoCart/{{this._id}}/{{this.Name}}/{{this.Price}}" class="btn btn-primary">Add to Cart</a>
  </div>
</div>
        
      
      </div>  
      {{/each}} 
      
    </div>
   
    
</div>
</section>


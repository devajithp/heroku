<div class="section">
    

    
  <div class="container">
  <a  class="btn btn-secondary mt-4" href="/admin/add-product">AddProduct</a>
     <div class="row">
         <div class="xs-4 col-sm-4 col-md-12 col-lg-12 col-xl-12 ">
            <div style="overflow-x:auto;">
         <table class="table mt-5" id="table_id">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.Price}}</td>
                    <td ><img style="height: 50px; width:50px;" src="/product-images/{{this._id}}.jpg"></td>
                    <td>{{this.Description}}</td>
                    <td><a class="btn btn-info" href="/admin/edit-product/{{this._id}}">Edit</a></td>
                    <td><a class="btn btn-danger mr-4" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure you want to delete {{this.Name}}')">Delete</a></td>
                </tr>
                {{/each}}
               
            </tbody>
         </table>
         </div>
   </div>
  </div>
  </div>
</div>

<script>

$(document).ready( function () {
    $('#table_id').DataTable();
} );

</script>
